<html>
    <head>
        <style>
            body{background-color: skyblue; font-family: verdana; color: #fff; padding: 30px;}
            h1{font-size: 48px; text-transform: uppercase; letter-spacing: 2px; text-align: center;}
            h2{font-size: 30px; text-transform: uppercase; letter-spacing: 2px; text-align: center;}
            ul{list-style-type: none;}
            p, li{font-size: 16px; text-align: center;}

        </style>
    </head>
    <body>
        <h1>welcome to the profile of <%= profile %></h1> <!--giving data from url to this tag-->
        <p><strong>age: </strong><%= person.age %></p>
        <p><strong>Job:</strong> <%= person.jobTitle%></p>
        <h2>hobbies</h2>
        <ul>
            <% person.Hobbies.forEach(function(item){ %>
                <li><%= item %></li>  <!-- dynamic reading of using forEach function-->
            <% }); %>
        </ul>
    </body>
</html>